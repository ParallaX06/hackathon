rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Bus locations - read by everyone, write by authenticated drivers
    match /buses/{busId} {
      allow read: if true; // Public read access for commuters
      allow write: if request.auth != null && request.auth.token.role == 'driver';
    }
    
    // Bus routes - read by everyone, write by admins
    match /routes/{routeId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // User profiles - read/write by owner only
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // System logs - write by authenticated users, read by admins
    match /logs/{logId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Analytics data - read/write by admins only
    match /analytics/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}